<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <style>
			{{styles}}
		</style>
    <title>Shipping Label - {{trackingNumber}}</title>
  </head>
  <body>
    <div class='shipping-label'>
      <!-- Tracking Section -->
      <div class='tracking-section'>
        <div class='tracking-info'>
          <h2>{{trackingNumber}}</h2>
          <p>Shipment ID: #{{shipmentId}} | Created: {{createdDate}}</p>
        </div>
        <div class='qr-code-section'>
          {{#if qrCodeSrc}}
            <img src='{{qrCodeSrc}}' alt='QR Code' />
          {{else}}
            <div class='qr-missing'>QR code unavailable</div>
          {{/if}}
          <p class='qr-label'>Scan for tracking</p>
        </div>
      </div>

      <!-- Main Content -->
      <div class='main-content'>
        <!-- Addresses Section -->
        <div class='addresses-section'>
          <!-- Sender Information -->
          <div class='address-box'>
            <h3>üì¶ SENDER DETAILS</h3>
            <div class='address-detail'>
              <strong>Name:</strong>
              {{senderName}}
            </div>
            <div class='address-detail'>
              <strong>Email:</strong>
              {{senderEmail}}
            </div>
            <div class='address-detail'>
              <strong>Phone:</strong>
              {{senderPhone}}
            </div>
            <div class='address-detail'>
              <strong>Address:</strong><br />
              {{pickupAddress}}
            </div>
          </div>

          <!-- Recipient Information -->
          <div class='address-box'>
            <h3>üìç RECIPIENT DETAILS</h3>
            <div class='address-detail'>
              <strong>Name:</strong>
              {{recipientName}}
            </div>
            <div class='address-detail'>
              <strong>Phone:</strong>
              {{recipientPhone}}
            </div>
            <div class='address-detail'>
              <strong>Address:</strong><br />
              {{destinationAddress}}
            </div>
          </div>
        </div>

        <!-- Package Details -->
        <div class='package-details'>
          <h3>üìã PACKAGE INFORMATION</h3>
          <div class='details-grid'>
            <div class='detail-item'>
              <span class='detail-label'>Package Type:</span>
              <span class='detail-value'>{{packageType}}</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Delivery Type:</span>
              <span class='detail-value'>{{deliveryType}}</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Weight:</span>
              <span class='detail-value'>{{weight}}g</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Distance:</span>
              <span class='detail-value'>{{distance}} km</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Base Price:</span>
              <span class='detail-value currency'>IDR {{basePrice}}</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Weight Price:</span>
              <span class='detail-value currency'>IDR {{weightPrice}}</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'>Distance Price:</span>
              <span class='detail-value currency'>IDR {{distancePrice}}</span>
            </div>
            <div class='detail-item'>
              <span class='detail-label'><strong>Total Cost:</strong></span>
              <span class='detail-value currency'><strong>IDR
                  {{totalPrice}}</strong></span>
            </div>
          </div>
        </div>

        <!-- Status Section -->
        <div class='status-section'>
          <div class='status-box payment-status'>
            <div class='status-label'>Payment Status</div>
            <div class='status-value'>{{paymentStatus}}</div>
          </div>
          <div class='status-box delivery-status'>
            <div class='status-label'>Delivery Status</div>
            <div class='status-value'>{{deliveryStatus}}</div>
          </div>
        </div>

        <div class='highlight'>
          <strong>Important:</strong>
          Please keep this shipping label for your records. Present this
          document or the QR code for package tracking and customer service
          inquiries.
        </div>
      </div>

      <!-- Footer -->
      <div class='footer'>
        <p>
          <strong>Kirim Now</strong>
          - Your Trusted Delivery Partner
        </p>
        <p>
          Customer Service: +62-21-1234-5678 | Email: support@kirimnow.com |
          www.kirimnow.com
        </p>
        <p>
          Generated on 01 January 2024 | This is a computer-generated document
        </p>
      </div>
    </div>
  </body>
</html>